<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/text_title"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_signin_google"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:padding="16dp"

        android:text="@string/text_btn_google"
        android:gravity="start|center_vertical"
        android:background="@drawable/btn_icon_background"

        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_signin_facebook"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="16dp"

        android:text="@string/text_btn_facebook"
        android:gravity="start|center_vertical"
        android:background="@drawable/btn_icon_background"

        android:drawableStart="@drawable/ic_facebook"
        android:drawablePadding="16sp"

        app:layout_constraintEnd_toEndOf="@+id/btn_signin_google"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/btn_signin_google"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin_google" />


    <Button
        android:id="@+id/btn_signin_github"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="16dp"

        android:text="@string/text_btn_github"
        android:gravity="start|center_vertical"
        android:background="@drawable/btn_icon_background"

        android:drawableStart="@drawable/ic_github"
        android:drawablePadding="16sp"

        app:layout_constraintEnd_toEndOf="@+id/btn_signin_facebook"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_signin_facebook"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin_facebook" />

</androidx.constraintlayout.widget.ConstraintLayout>